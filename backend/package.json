{
  "name": "realtime-code-collab-backend",
  "version": "1.0.0",
  "description": "Backend server for real-time code collaboration with Socket.IO",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "lint": "echo 'Linting passed - no linter configured yet'",
    "build": "echo 'Build completed'",
    "docker:build": "docker build -t realtime-code-backend .",
    "docker:run": "docker run -p 5000:5000 realtime-code-backend"
  },
  "dependencies": {
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.0.0",
    "supertest": "^6.3.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/**/*.test.js"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "real-time",
    "collaboration",
    "code-editor",
    "websocket",
    "nodejs",
    "express",
    "socket.io",
    "monaco-editor"
  ],
  "author": "Real-time Code Collaboration Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/real-time-code-collaboration.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/real-time-code-collaboration/issues"
  },
  "homepage": "https://github.com/yourusername/real-time-code-collaboration#readme"
}
