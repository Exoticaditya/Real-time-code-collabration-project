{
  "name": "realtime-code-collab-frontend",
  "version": "1.0.0",
  "description": "Frontend React app for real-time code collaboration with Monaco Editor",
  "private": true,
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "@monaco-editor/react": "^4.4.6",
    "socket.io-client": "^4.7.2",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "eject": "react-scripts eject",
    "serve": "npx serve -s build -l 3000",
    "docker:build": "docker build -t realtime-code-frontend .",
    "docker:run": "docker run -p 3000:80 realtime-code-frontend"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/index.js",
      "!src/serviceWorker.js",
      "!src/reportWebVitals.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "keywords": [
    "react",
    "real-time",
    "collaboration",
    "code-editor",
    "monaco-editor",
    "websocket",
    "socket.io"
  ],
  "author": "Real-time Code Collaboration Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/real-time-code-collaboration.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/real-time-code-collaboration/issues"
  },
  "homepage": "https://github.com/yourusername/real-time-code-collaboration#readme"
}